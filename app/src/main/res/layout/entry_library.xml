<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingHorizontal="17dp"
    android:paddingVertical="8dp">

    <ImageView
        android:id="@+id/entry_library_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entry_library_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="16sp"
        app:layout_constraintEnd_toStartOf="@+id/entry_library_overflow"
        app:layout_constraintStart_toEndOf="@+id/entry_library_icon"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/entry_library_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/entry_library_title"
        app:layout_constraintStart_toStartOf="@+id/entry_library_title"
        app:layout_constraintTop_toBottomOf="@+id/entry_library_title" />

    <ImageButton
        android:id="@+id/entry_library_overflow"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/ic_overflow_vertical"
        android:scaleType="fitCenter"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>